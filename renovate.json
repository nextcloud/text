{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"timezone": "Europe/Berlin",
	"schedule": ["every weekend"],
	"reviewers": ["max-nextcloud", "mejo-"],
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"rebaseWhen": "conflicted",
	"ignoreUnstable": false,
	"baseBranches": ["main", "stable31", "stable30"],
	"enabledManagers": ["npm"],
	"ignoreDeps": ["node", "npm"],
	"packageRules": [
		{
			"groupName": "vue",
			"matchPackageNames": ["vue", "@vue/{/,}**"]
		},
		{
			"groupName": "vueuse",
			"matchPackageNames": ["@vueuse/{/,}**"]
		},
		{
			"groupName": "cypress",
			"matchPackageNames": ["cypress", "@nextcloud/cypress", "@cypress/{/,}**"]
		},
		{
			"groupName": "vite",
			"matchPackageNames": ["vite", "vite-plugin-commonjs", "@vitejs/{/,}**"]
		},
		{
			"groupName": "yjs",
			"matchPackageNames": [
				"yjs",
				"y-websocket",
				"@hocuspocus/provider",
				"lib0"
			]
		},
		{
			"groupName": "highlight",
			"matchPackageNames": ["highlight.js", "lowlight"]
		},
		{
			"groupName": "tiptap",
			"matchPackageNames": ["@tiptap/{/,}**", "prosemirror-{/,}**"]
		},
		{
			"groupName": "typescript",
			"matchPackageNames": ["typescript", "typedoc"]
		},
		{
			"matchUpdateTypes": ["major"],
			"matchBaseBranches": [
				"stable32",
				"stable31",
				"stable30",
				"stable29",
				"stable28",
				"stable27",
				"stable26"
			],
			"enabled": false
		},
		{
			"matchUpdateTypes": ["major", "minor"],
			"matchBaseBranches": [
				"stable31",
				"stable30",
				"stable29",
				"stable28",
				"stable27",
				"stable26"
			],
			"enabled": false
		},
		{
			"matchUpdateTypes": ["major", "minor"],
			"matchPackageNames": [
				"cypress",
				"@nextcloud/cypress",
				"@cypress/{/,}**"
			],
			"matchBaseBranches": [
				"stable32",
				"stable31",
				"stable30",
				"stable29",
				"stable28",
				"stable27",
				"stable26"
			],
			"enabled": false
		},
		{
			"matchPackageNames": ["vue"],
			"allowedVersions": "<3"
		},
		{
			"matchPackageNames": ["@vue/tsconfig"],
			"allowedVersions": "<0.6"
		},
		{
			"matchPackageNames": ["vueuse"],
			"allowedVersions": "<12"
		},
		{
			"matchPackageNames": ["@vue/test-utils"],
			"allowedVersions": "<2"
		}
	]
}
